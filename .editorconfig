# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
# not supported by eclipseconfig
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{json,json5}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{groovy,java,gradle}]
charset = utf-8
indent_style = tab
indent_size = 4
# not supported by eclipseconfig
insert_final_newline = true
